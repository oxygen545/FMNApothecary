  <% if @home == nil %>
  <%    @home = Home.find_by( title: "Home") %>
  <% end %>
  <%= render 'navigation/main' %>
  <% if @home.image.attachment != nil %>
    <div align="center">
      <%= image_tag(@home.image, width: "100%") %>
    </div>
    <hr>
  <% end %>
      <section class="jumbotron text-center">
        <div class="container">
          <h2 class="jumbotron-heading">Grand Opening</h2>
          <h1 class="jumbotron-heading">Welcome to our new website</h1>
          <p class="lead text-muted">I hope you find a plethora of information here as we continue to grow and offer more goods and services in the future. Sign up below for our newsletter and don't forget to visit our Etsy Shop for purchases</p>
          <p>
            <%= link_to "Shop Now on Etsy", "https://www.etsy.com/shop/FMNNaturalApothecary", :class => "btn btn-primary my-2" %> and also&nbsp;
            <%= link_to "Sign Up for special Emails", new_webuser_registration_path, :class => "btn btn-secondary my-2" %>
            <%# link_to "More Information", page_path(Subpage.find_by(link: "Grand Opening Sale")),:class =>"btn btn-secondary my-2" %>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% Page.find_each do |p| %>
              <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <div class="card-img-top" align=center >
                    <% if p.thumbimage.attachment != nil %>
                      <br><%= image_tag(p.thumbimage) %><hr>
                      <%= link_to p.heading, page_path(p) %>
                    <% else %>
                      <br><%= link_to p.heading, page_path(p) %>
                    <% end %>
                    <hr>
                  </div>
                  <div class="card-body" align=center>
                    <p class="card-text"><%= p.title %><br><%= p.content %><br></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Show "+p.link, page_path(p) %></button>
                      </div>
                      <small class="text-muted"><%= time_ago_in_words(p.updated_at) %></small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      