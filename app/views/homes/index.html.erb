      <section class="jumbotron text-center">
        <div class="container">
          <h2 class="jumbotron-heading">Coming Soon!!</h2>
          <h1 class="jumbotron-heading">Grand Opening Day Sale</h1>
          <p class="lead text-muted">In honor of our upcoming website release we are offering a special sale to our existing and all new customers. Click below to sign up to be notified of opening day</p>
          <p>
            <%= link_to "Sign Up", new_webuser_registration_path, :class => "btn btn-primary my-2" %>
            <%# link_to "More Information", page_path(Subpage.find_by(link: "Grand Opening Sale")),:class =>"btn btn-secondary my-2" %>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% Page.find_each do |p| %>
              <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <div class="card-img-top" align=center >
                    <% if p.thumbimage.attachment != nil %>
                      <br><%= image_tag(p.thumbimage) %><hr>
                      <%= link_to p.heading, page_path(p) %>
                    <% else %>
                      <br><%= link_to p.heading, page_path(p) %>
                    <% end %>
                    <hr>
                  </div>
                  <div class="card-body" align=center>
                    <p class="card-text"><%= p.title %><br><%= p.content %><br></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Show "+p.link, page_path(p) %></button>
                      </div>
                      <small class="text-muted"><%= time_ago_in_words(p.updated_at) %></small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      